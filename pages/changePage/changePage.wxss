/* changePage.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-container {
  margin-top: 50px;
  position: relative;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
}

.choose-btn {
  position: absolute;
  bottom: 0;
  right: 0;
}

.input-container {
  margin-top: 20px;
}

.input {
  width: 300px;
  height: 40px;
  border: 1px solid #ccc;
  border-radius: 5px;
  padding: 5px 10px;
}

.confirm-btn {
  margin-top: 20px;
  width: 200px;
  height: 40px;
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 5px;
}
